page {
  background-color: #EEEEEE;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  padding-top: 0px;
}

.page-head {
  padding-top: 0px;
  width: 100%;
  top: 0px;
}

.page-tip {
  border-top:1px solid #757575; 
  border-bottom:1px solid #757575; 
  background-color: #FFFFFF;
  margin-top: 10px;
  width: 100%;
}

.page-body {
  width: 100%;
}

.page-foot {
  position: fixed;
  width: 100%;
  height: 20px;
  bottom: 0px;
}

swiper{
  width: 100%;
  height: 220px;
}

.swiper-item{
  display: block;
  width: 100%;
  height: 100%;
}

.page-section page-section-spacing swiper {
   width: 100%;
   top: 0px;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.img{
  border-top: 1px solid #EDEDED;
  border-bottom: 1px solid #EDEDED;
}
.img image{
  display: block;
  border-bottom: 1px solid #EDEDED;
}
.title{
  padding: 10px 0px;
}

.title text{
  display: block;
  width: 100%;
  text-align: center;
  color: #333;
}

.title .cn{
  font-size: 16px;
}
.title .en{
  font-size: 12px;
}

.icon{
  border-top:2px solid #EDEDED; 
  border-bottom:2px solid #EDEDED; 
  display: flex;
  padding: 12px 0;
}
.icon image{
  display: block;
  width: 30px;
  height: 30px;
  margin: 0 auto;
  padding-top: 10px;
}
.icon text{
  display: block;
  text-align: center;
  width: 100%;
  font-size: 14px;
  color: #333;
  padding-top: 10px;
}
.icon navigator{
  flex: 1 0 25%;
}

.list{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
}
.list .item{
  width: 50%;
}

.list .item .item-show{
  background-color: #FFFFFF;
  margin: 7px;
  border-radius: 7px;
}

.list .item .text{
  display: block;
  font-size: 12px;
  line-height: 22px;
  margin:0 15px;
}

.list .item .product{
  display: block;
  width: 95%;
  height: 175px;
  margin: 0 auto;
  padding-top: 7px;
}

.price{
  display: flex;
  margin:0 10px;
  justify-content:space-between;
}

.price text{
  font-size: 16px;
  color: #ff5f19;
}

.price image{
  display: block;
  width: 20px;
  height: 20px;
  padding-top: 2px;
}
