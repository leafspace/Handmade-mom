/* pages/tab/tab.wxss */
.head text{line-height: 85rpx;}
.head .active::after{content: '';width: 70rpx;height: 6rpx;background: linear-gradient(to right,#EFD9C0, #E9C7A2);position: absolute;left: 50%;margin-left: -35rpx;bottom: 0;border-radius: 6px;}

.store_info{display: flex;align-items: center;justify-content: space-between;height: 50vh;
margin-top: calc(50vh - 186rpx);background-color: #fff;}
.store_scroll_left{width: 200rpx;background-color: #F7F7F7;}
.store_scroll_left .store_item{text-align: center;color: #333;font-size: 31rpx;line-height: 100rpx;}
.store_scroll_right{flex:1;overflow: hidden;box-sizing: border-box;padding: 0 25rpx;}
.store_scroll_left .active{position: relative;background-color: #fff;color: #000 !important;font-size: 32rpx !important;}
.store_scroll_left .active::after{content: '';width: 40rpx;height:4rpx;background: linear-gradient(to right,#EFD9C0, #E9C7A2);position: absolute;left: 50%;margin-left: -25rpx;bottom: 16rpx;border-radius: 4rpx;}
.store_item_box{border-bottom: 1px solid #eee;display: flex;padding: 35rpx 0;position: relative;}
.store_item_box > image{display: block;width: 130rpx;height: 130rpx;margin-right: 20rpx;border: 1px solid #f5f5f5;}
.store_item_right{flex:1;overflow: hidden;position: relative;}
.name_row{display: flex;align-items: center;}
.name_row .tips{color: #fff;font-size: 20rpx;background: linear-gradient(to right,#EFD9C0, #E9C7A2);border-radius: 5rpx;margin-right: 8rpx;padding: 0 8rpx;line-height: 35rpx;}
.name_row .name{flex:1;overflow: hidden;font-size: 32rpx;color: #333;text-overflow: ellipsis;white-space: nowrap;}
.tag_row{margin: 5rpx 0 10rpx;}
.tag_item{padding-right: 12rpx;margin-right: 12rpx;border-right: 1px solid #AAA9AA;color: #AAA9AA;font-size: 24rpx;height: 23rpx;line-height: 23rpx;display: inline-block;}
.tag_row .tag_item:last-child{border:0;}
.store_item_right .address{color: #AAA9AA;font-size: 22rpx;margin-top: 10rpx;}
.store_item_box .num{display: flex;flex-direction: column;align-items: center;justify-content: center;color: #fff;background: linear-gradient(to right,#EFD9C0, #E9C7A2);position: absolute;right: 0;top: 0;font-size: 16rpx;padding: 5px 0 16rpx;width: 70rpx;}
.store_item_box .num::after{content: '';border-bottom: 5px solid #fff;border-left: 35rpx solid transparent;border-right: 35rpx solid transparent;position: absolute;left: 0;right: 0;bottom: 0;}
.store_item_box .num text:nth-child(1){font-size: 25rpx;}
