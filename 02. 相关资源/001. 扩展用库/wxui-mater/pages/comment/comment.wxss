/* pages/comment/comment.wxss */
page{background-color: #fff;}
.comment_wrap{justify-content: flex-start;}
.star_wrap{justify-content: flex-start;margin-left: 30rpx;}
.star_wrap span{display: block;width: 35rpx;margin: 0 5rpx;}

.tag{justify-content: flex-start;flex-flow: row wrap;padding: 35rpx 12rpx;}
.tag .item{width: 25%;padding: 0 15rpx;margin: 12rpx 0;}
.tag .item text{display: block;line-height: 60rpx;}
.textarea{margin: 0 30rpx;width: calc(100vw - 60rpx);display: block;line-height: 40rpx;}
.tips{padding: 0 30rpx;}
.btn{margin: 50rpx 30rpx 30rpx;line-height: 95rpx;}

.camera_wrap{justify-content: flex-start;padding: 30rpx 30rpx 10rpx;}  
