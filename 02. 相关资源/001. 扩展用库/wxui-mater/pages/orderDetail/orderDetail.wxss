.order_status_address{margin-bottom: 20rpx;}
.order_status_address .status{padding: 45rpx 20rpx;}
.order_status_address .address_wrap{padding: 25rpx 20rpx;align-items: flex-start;}
.order_status_address .iconshouhuodizhi{vertical-align: middle;margin-top: 4rpx;}
.order_status_address .right{padding-left: 10rpx;}
.order_status_address .right .name{margin-bottom: 10rpx;}
.order_status_address .right .name text{margin-right: 20rpx;}

.time{padding: 0 20rpx;}
.time .right view{height: 70rpx;line-height: 70rpx;margin-left: 20rpx;min-width: 140rpx;}
