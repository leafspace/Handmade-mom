.order_goods .tit{line-height: 80rpx;}
.goods_wrap{padding: 25rpx 0;}
.goods_wrap .item{padding: 10rpx 0;}
.goods_wrap .item image{display: block;width: 110rpx;height: 110rpx;}
.goods_wrap .item .right{padding-left: 20rpx;}
.goods_wrap .item .right .price_num{margin-top: 10rpx;}
.fee_row .row{padding: 10rpx 0;}
.fee_row .total_wrap{justify-content: flex-end;padding: 10rpx 0 20rpx;}
.fee_row .total_wrap .total{margin-left: 25rpx;}

