/* pages/loading/loading.wxss */
.loader {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}
.dot_wrap{
  background-color: rgba(0,0,0,.2);
  border-radius: 10rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 35rpx 25rpx;
} 
.loader .dot image {
    width: 15px;
    height: 15px;
    animation: object 1s ease-in-out infinite;
}

.loader .dot7 image { margin: 0 -2rpx; animation-delay: 0.7s; }
.loader .dot6 image { margin: 0 -2rpx; animation-delay: 0.6s; } 
.loader .dot5 image { margin: 0 -2rpx; animation-delay: 0.5s; }
.loader .dot4 image { margin: 0 -6rpx 0 -4rpx; animation-delay: 0.4s; }
.loader .dot3 image { animation-delay: 0.3s; }
.loader .dot2 image { animation-delay: 0.2s; }
.loader .dot1 image { animation-delay: 0.1s; } 
 
@-webkit-keyframes object{
  0% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
  30% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
  50% {
    -ms-transform: translate(0,-10px); 
    -webkit-transform: translate(0,-10px);
    transform: translate(0,-10px);
  }
  70% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
  100% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
}		
@keyframes object{
  0% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
  40% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
  50% {
    -ms-transform: translate(0,-10px); 
    -webkit-transform: translate(0,-10px);
    transform: translate(0,-10px);
  }
  60% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
  100% {
    -ms-transform: translate(0,0); 
    -webkit-transform: translate(0,0);
    transform: translate(0,0);
  }
}